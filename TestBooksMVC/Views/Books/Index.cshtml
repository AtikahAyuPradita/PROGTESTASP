@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Date Publised</th>
        <th>Number of Pages</th>
        <th>Type Book</th> 
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>
                <a href="@Url.Action("Edit","Books", new {@id=@Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete","Books", new {@id=@Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create" , "Books")">Add Books</a>